<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/all"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/widget_sun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_sun1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_red"
                android:gravity="center"
                android:text="日"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/widget_sun0"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_red" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_mon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_mon0"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_orange" />

            <TextView
                android:id="@+id/widget_mon1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_orange"
                android:gravity="center"
                android:text="一"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_tue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_tue0"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_yellow" />

            <TextView
                android:id="@+id/widget_tue1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_yellow"
                android:gravity="center"
                android:text="二"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_wed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_wed0"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_green" />

            <TextView
                android:id="@+id/widget_wed1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_green"
                android:gravity="center"
                android:text="三"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_thur"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_thur0"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_cyan" />

            <TextView
                android:id="@+id/widget_thur1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_cyan"
                android:gravity="center"
                android:text="四"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:visibility="gone" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_fri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_fri0"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_blue"
                android:visibility="gone" />

            <TextView
                android:id="@+id/widget_fri1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_blue"
                android:gravity="center"
                android:text="五"
                android:textColor="#ffffff"
                android:textSize="22sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_sat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_sat0"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_purple" />

            <TextView
                android:id="@+id/widget_sat1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_purple"
                android:gravity="center"
                android:text="六"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:visibility="gone" />

        </FrameLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <LinearLayout
            android:id="@+id/widget_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/widget_area1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="@drawable/all_small">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/widget_time1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1-2"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.5"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/widget_course1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="微机系统与接口技术"
                            android:textColor="#777777"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/widget_place1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="\@3区 1-502"
                            android:textColor="#777777"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/widget_homework1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/widget_homework"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_area2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:background="@drawable/all_small">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/widget_time2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/half_blue"
                        android:text="3-5"
                        android:textColor="#ffffff"
                        android:textSize="18dp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.5"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/widget_course2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="操作系统原理"
                            android:textColor="#777777"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/widget_place2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="\@3区 1-506"
                            android:textColor="#777777"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/widget_homework2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/widget_homework"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_area3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:background="@drawable/all_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/widget_time3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/half_blue"
                        android:gravity="center"
                        android:text="6-8"
                        android:textColor="#ffffff"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.5"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/widget_course3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="软件工程"
                            android:textColor="#777777"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@+id/widget_place3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="\@3区 1-419"
                            android:textColor="#777777"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/widget_homework3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/widget_homework"
                    />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_next"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/widget_next_icon"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"/>

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/widget_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="(=・ω・=)\n 今天没有课哦~"
            android:textSize="20dp"
            android:textColor="#777777"
            android:visibility="visible" />

    </FrameLayout>











</LinearLayout>