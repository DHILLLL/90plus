<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/comment3_image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:civ_border_color="#ABABAB"
                app:civ_border_width="1dp"
                android:src="@drawable/jay"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comment3_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_gravity="left|center"
                    android:text="Dongheyou"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/comment3_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_gravity="left|center"
                    android:text="2017.7.24 16.58"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/comment3_up"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:lines="1"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="支持(8)"
                    android:autoLink="all"
                    android:textStyle=""
                    android:textColor="#40BD55"/>

                <TextView
                    android:id="@+id/comment3_down"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:lines="1"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="反对(2)"
                    android:textColor="#f44336"/>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/comment3_words"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="雷军老师的课我有幸听过一次，感觉好极了，内容生动有干活，英语讲得也特别好。"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.1"/>


    </LinearLayout>

</android.support.v7.widget.CardView>