<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/all"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <FrameLayout
            android:id="@+id/widget_big_sun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_big_sun1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_red"
                android:text="日"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/widget_big_sun0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_red" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_big_mon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_big_mon0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_orange"
                />

            <TextView
                android:id="@+id/widget_big_mon1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_orange"
                android:text="一"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:visibility="gone"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_big_tue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_big_tue0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_yellow" />

            <TextView
                android:id="@+id/widget_big_tue1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_yellow"
                android:text="二"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:visibility="gone"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_big_wed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_big_wed0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_green"
                />

            <TextView
                android:id="@+id/widget_big_wed1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_green"
                android:text="三"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:visibility="gone"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_big_thur"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_big_thur0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_cyan"
                />

            <TextView
                android:id="@+id/widget_big_thur1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_cyan"
                android:text="四"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:visibility="gone"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_big_fri"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_big_fri0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_blue"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/widget_big_fri1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_blue"
                android:text="五"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="25sp"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_big_sat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_big_sat0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_purple"
                />

            <TextView
                android:id="@+id/widget_big_sat1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/oval_purple"
                android:text="六"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:visibility="gone"/>

        </FrameLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <LinearLayout
            android:id="@+id/widget_big_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/widget_big_area1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/all_small">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/widget_big_time1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1-2"
                        android:textColor="#ffffff"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="4.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/widget_big_course1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="微机系统与接口技术"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/widget_big_place1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="\@3区 1-502"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/widget_big_homework1"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/widget_homework" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_big_area2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/all_small">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/widget_big_time2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/half_blue"
                        android:gravity="center"
                        android:text="3-5"
                        android:textColor="#ffffff"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="4.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/widget_big_course2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="操作系统原理"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/widget_big_place2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="\@3区 1-506"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/widget_big_homework2"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/widget_homework" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_big_area3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/all_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/widget_big_time3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/half_blue"
                        android:gravity="center"
                        android:text="6-8"
                        android:textColor="#ffffff"
                        android:textSize="24dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="4.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/widget_big_course3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="软件工程"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/widget_big_place3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:lines="1"
                            android:text="\@3区 1-419"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/widget_big_homework3"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/widget_homework" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_big_next"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/widget_big_next_icon"
                    android:layout_width="30dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center" />

            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/widget_big_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="(=・ω・=)\n 今天没有课哦~"
            android:textSize="25dp"
            android:visibility="visible" />

    </FrameLayout>


</LinearLayout>